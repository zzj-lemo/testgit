@import "../../styles/iconfont.wxss";
page{
    background-color: #ECEBE8;
}
.user_info_wrap{
    height: 45vh;
    overflow: hidden;
    background-color: #EB4450;
    position: relative;
}
.user_img{
    position: relative;
}
.user_img .user_bg{
    height: 50vh;
    filter: blur(10rpx);
}
.user_info{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
    
}
.user_icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user_name{
    color: #fff;
    margin-top: 40rpx;
    font-size: 40rpx;
}
.user_btn{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 40%;
    border: 1rpx solid greenyellow;
    color: greenyellow;
    font-size: 38rpx;
    padding: 30rpx;
    border-radius: 10rpx;
}

.user_content{
    position: relative;
}
.user_main{
    color: #666;
    padding-bottom: 100rpx;
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40rpx;
}
.history_wrap{
    background-color: #fff;
    display: flex;
}
.history_wrap navigator{
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
}
.his_num{
    color: #EB4450;
}
.orders_wrap{
    background-color: #fff;
    margin-top: 30rpx;
}
.orders_title{
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}
.order_content{
    display: flex;
}
.order_content navigator{
    padding: 15rpx 0;
    flex: 1;
    text-align: center;
}
.order_content .iconfont{
    color: #EB4450;
    font-size: 40rpx;
}
.address_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}
.app_info_wrap{
    margin-top: 30rpx;
    background-color: #fff;
}
.app_info_item{
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}
.app_info_contact{
    display: flex;
    justify-content: space-between;
}
.recommend_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}