@import "../../styles/iconfont.wxss";

.detail_swiper swiper{
    height: 65vw;
    text-align: center;
}
.detail_swiper swiper image{
    width: 60%;
}

.goods_price{
    padding: 15rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #EB4450;
}

.goods_row{
    display: flex;
    padding: 10rpx 0;
}

.goods_name{
    flex:5;
    color: #000;
    font-size: 30rpx;
    padding: 0 10rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods_collect{
    flex: 1;
    display: flex;
    font-size: 30rpx;
    flex-direction: column;
    justify-items: center;
    align-items: center;
    border-left: 1rpx solid #ccc;
}
.goods_collect .icon-shoucang1{
    color: orangered;
}

.goods_info_title{
    font-size: 32rpx;
    color: #EB4450;
    font-weight: 600;
    padding: 20rpx;
    border-top: 10rpx solid #dedede;
    border-bottom: 10rpx solid #dedede;
}

.btm_tool{
    border-top: 1rpx solid #ccc;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
}

.tool_item{
    flex:1;
    display: flex;
    text-align: center;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    font-size: 24rpx;
    position: relative;
}
button{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.btn_cart{
    flex: 2;
    text-align: center;
    background-color: #ffa500;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}

.btn_buy{
    flex: 2;
    text-align: center;
    background-color: #eb4450;
    color: #fff;
    font-size: 30rpx;
    font-weight: 600;
}